<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_mainmenu">

    <!-- Modern Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        app:title="Settings"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_back"
        app:navigationIconTint="@color/white"
        app:titleTextAppearance="@style/TextAppearance.Material3.TitleLarge"
        android:elevation="0dp" />

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:fillViewport="true"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Audio Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/white"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”Š"
                            android:textSize="28sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Audio Settings"
                            android:textSize="20sp"
                            android:fontFamily="@font/pixelated_pusab"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <!-- Sound Effects Slider -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sound Effects"
                                android:textSize="16sp"
                                android:fontFamily="@font/pixelated_display"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tvSoundVolume"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="100%"
                                android:textSize="14sp"
                                android:fontFamily="@font/pixelated_display"
                                android:textColor="@color/primary"
                                android:minWidth="50dp"
                                android:gravity="end" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Button clicks, correct/wrong answers, etc."
                            android:textSize="13sp"
                            android:fontFamily="@font/pixelated_display"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderSoundEffects"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:valueFrom="0"
                            android:valueTo="100"
                            android:value="100"
                            android:stepSize="1"
                            app:thumbColor="@color/primary"
                            app:trackColorActive="@color/primary"
                            app:trackColorInactive="@color/surface_light"
                            app:trackHeight="8dp" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/surface_light"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp" />

                    <!-- Background Music Slider -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Background Music"
                                android:textSize="16sp"
                                android:fontFamily="@font/pixelated_display"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tvMusicVolume"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30%"
                                android:textSize="14sp"
                                android:fontFamily="@font/pixelated_display"
                                android:textColor="@color/primary"
                                android:minWidth="50dp"
                                android:gravity="end" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Looping background music on menu screens"
                            android:textSize="13sp"
                            android:fontFamily="@font/pixelated_display"
                            android:textColor="@color/text_secondary"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/sliderBackgroundMusic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:valueFrom="0"
                            android:valueTo="100"
                            android:value="30"
                            android:stepSize="1"
                            app:thumbColor="@color/primary"
                            app:trackColorActive="@color/primary"
                            app:trackColorInactive="@color/surface_light"
                            app:trackHeight="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Progress & Data Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/white"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“Š"
                            android:textSize="28sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Progress &amp; Data"
                            android:textSize="20sp"
                            android:fontFamily="@font/pixelated_pusab"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <!-- Reset Progress Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnResetProgress"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="RESET ALL PROGRESS"
                        android:textSize="16sp"
                        android:fontFamily="@font/pixelated_display"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_game_accent"
                        android:elevation="4dp"
                        android:stateListAnimator="@null"
                        app:cornerRadius="16dp"
                        app:icon="@android:drawable/ic_menu_revert"
                        app:iconTint="@color/white"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš ï¸ This will delete all your progress, scores, and unlocked badges. This action cannot be undone!"
                        android:textSize="12sp"
                        android:fontFamily="@font/pixelated_display"
                        android:textColor="@color/error"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="2dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- About Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/white"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”¬"
                        android:textSize="48sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="OptiLearn"
                        android:textSize="22sp"
                        android:fontFamily="@font/pixelated_pusab"
                        android:textColor="@color/primary"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvAppVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Version 1.0.0"
                        android:textSize="14sp"
                        android:fontFamily="@font/pixelated_display"
                        android:textColor="@color/text_secondary"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true" />

                    <!-- Developer Mode Toggle (Hidden until activated) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnToggleDeveloperMode"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ› ï¸ Developer Mode: ON"
                        android:textSize="12sp"
                        android:fontFamily="@font/pixelated_display"
                        android:visibility="gone"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Master the science of light through fun quizzes and earn badges!"
                        android:textSize="14sp"
                        android:fontFamily="@font/pixelated_display"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:lineSpacingExtra="4dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Game Designers Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:backgroundTint="@color/white"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ®"
                            android:textSize="28sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Game Designers"
                            android:textSize="20sp"
                            android:fontFamily="@font/pixelated_pusab"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <!-- Designer 1: Bill Reniel A. Ariaso -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/bill_reniel_a_ariaso"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Bill Reniel A. Ariaso"
                            android:textSize="16sp"
                            android:fontFamily="@font/pixelated_display"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/surface_light" />

                    <!-- Designer 2: Cherry P. MaraÃ±an -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/cherry_p_maranan"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cherry P. MaraÃ±an"
                            android:textSize="16sp"
                            android:fontFamily="@font/pixelated_display"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/surface_light" />

                    <!-- Designer 3: Ina E. Villato -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/ina_e_villato"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ina E. Villato"
                            android:textSize="16sp"
                            android:fontFamily="@font/pixelated_display"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/surface_light" />

                    <!-- Designer 4: Mary Jessa A. Alvior -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/mary_jessa_a_alvior"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/CircleImageView"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Mary Jessa A. Alvior"
                            android:textSize="16sp"
                            android:fontFamily="@font/pixelated_display"
                            android:textColor="@color/text_primary" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Developer Credit -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developed by lokixcz"
                android:textSize="11sp"
                android:fontFamily="@font/pixelated_display"
                android:textColor="@color/text_secondary"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:alpha="0.7" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
