<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="24dp">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        android:backgroundTint="@color/white"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp"
            android:gravity="center">

            <!-- Feedback Icon/Animation Area -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieFeedback"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="false"
                android:layout_marginBottom="16dp" />

            <!-- Feedback Title -->
            <TextView
                android:id="@+id/tvFeedbackTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ“ Correct!"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/correct_answer"
                android:layout_marginBottom="12dp" />

            <!-- Explanation Text -->
            <TextView
                android:id="@+id/tvExplanationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Optics is the branch of physics that studies light."
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="6dp"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Continue Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinue"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="CONTINUE"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-bold"
                android:textColor="@color/white"
                android:background="@drawable/btn_game_primary"
                android:elevation="6dp"
                android:stateListAnimator="@null"
                app:cornerRadius="30dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
