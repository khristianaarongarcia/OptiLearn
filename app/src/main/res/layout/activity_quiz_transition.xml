<?xml version="1.0" encoding="utf-8"?>
<!-- Quiz Transition/Loading Screen - Uses same layout structure as Quest Map overlay -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Logo Container -->
    <ImageView
        android:id="@+id/ivTransitionLogo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/optilearn_logo"
        android:scaleType="centerInside"
        android:layout_gravity="center" />

    <!-- Loading text - positioned exactly like Quest Map overlay -->
    <TextView
        android:id="@+id/tvLoadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loading Quiz..."
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:fontFamily="@font/pixelated_display"
        android:layout_gravity="center"
        android:layout_marginTop="200dp"
        android:alpha="0" />

</FrameLayout>
