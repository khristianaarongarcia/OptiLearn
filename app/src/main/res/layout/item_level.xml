<?xml version="1.0" encoding="utf-8"?>

<!-- Optimized Zigzag Quest Path Node -->
<!-- Proper z-ordering: Vertical line (back) â†’ Branch line (middle) â†’ Circle (front) -->

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <!-- Layer 1: Central Vertical Progress Line (BEHIND) -->
    <!-- Height will be dynamically adjusted by adapter: full for locked/completed, half for glowing -->
    <View
        android:id="@+id/viewProgressLine"
        android:layout_width="6dp"
        android:layout_height="190dp"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="-5dp"
        android:background="@drawable/progress_line_locked"
        android:elevation="1dp"
        android:visibility="gone"
        tools:visibility="visible" />
        
    <!-- Layer 2: Horizontal Branch Line (MIDDLE) -->
    <View
        android:id="@+id/viewBranchLine"
        android:layout_width="60dp"
        android:layout_height="4dp"
        android:layout_gravity="center_vertical|start"
        android:background="@drawable/progress_line_locked"
        android:elevation="1dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <!-- Layer 3: Level Content Container (FRONT) -->
    <FrameLayout
        android:id="@+id/levelContentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="5dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Level Circle with Overlays -->
            <FrameLayout
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:clipChildren="false"
                android:clipToPadding="false">

                <!-- Solid Background Blocker (blocks branch lines behind) -->
                <View
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_background_blocker"
                    android:elevation="4dp" />

                <!-- Main Circle Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="@color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- Highlight Ring for Current Level -->
                        <View
                            android:id="@+id/viewHighlightRing"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@drawable/circle_border_highlight"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:visibility="visible" />

                        <!-- Badge Icon (PNG) -->
                        <ImageView
                            android:id="@+id/ivBadgeIcon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:scaleType="centerInside"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:src="@drawable/optics_explorer" />

                        <!-- Badge Icon (Emoji Fallback) -->
                        <TextView
                            android:id="@+id/tvBadgeIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="36sp"
                            android:gravity="center"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:text="ðŸ”†"
                            tools:visibility="gone" />

                        <!-- Lock Icon for Locked Levels -->
                        <ImageView
                            android:id="@+id/ivLockIcon"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_lock"
                            android:tint="@color/text_secondary"
                            android:visibility="gone"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:visibility="gone" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <!-- Completion Checkmark (Bottom-Left Corner) -->
                <TextView
                    android:id="@+id/tvCompletedMark"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="start|bottom"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/circle_success"
                    android:gravity="center"
                    android:text="âœ“"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:elevation="8dp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <!-- Level Number Badge (Top-Right Corner) -->
                <TextView
                    android:id="@+id/tvLevelNumber"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|top"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/circle_background"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:elevation="8dp"
                    tools:text="1" />

            </FrameLayout>

            <!-- Level Title -->
            <TextView
                android:id="@+id/tvLevelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:maxWidth="140dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/pixelated_pusab"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4"
                tools:text="Optics Explorer" />

            <!-- High Score Display -->
            <TextView
                android:id="@+id/tvHighScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/yellow_star"
                android:fontFamily="@font/pixelated_display"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="3"
                android:visibility="gone"
                tools:text="â˜… 100%"
                tools:visibility="visible" />

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/badge_unlocked"
                android:fontFamily="@font/pixelated_display"
                android:visibility="visible"
                tools:text="PLAY" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>