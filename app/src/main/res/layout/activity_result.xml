<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_mainmenu">

    <!-- Result Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Result Title -->
        <TextView
            android:id="@+id/tvResultTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/level_passed"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="@font/pixelated_pusab"
            android:textColor="@color/completed_level"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Badge Icon -->
        <ImageView
            android:id="@+id/ivBadgeIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/optics_explorer"
            android:scaleType="centerInside"
            android:layout_marginBottom="16dp" />
        
        <!-- Fallback Text Icon for levels without PNG icons -->
        <TextView
            android:id="@+id/tvBadgeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”†"
            android:textSize="80sp"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- Badge Name -->
        <TextView
            android:id="@+id/tvBadgeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Badge: Finder"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/pixelated_display"
            android:textColor="@color/accent"
            android:layout_marginBottom="32dp" />

        <!-- Score Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_score"
                    android:textSize="16sp"
                    android:fontFamily="@font/pixelated_display"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100%"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvCorrectAnswers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 / 5 Correct"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp" />

                <!-- Perfect Score Message -->
                <TextView
                    android:id="@+id/tvPerfectMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/perfect_score_msg"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent"
                    android:gravity="center"
                    android:visibility="gone"
                    android:paddingTop="12dp"
                    android:paddingBottom="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnNextLevel"
                android:layout_width="@dimen/result_button_max_width"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/btn_next_level"
                android:layout_gravity="center"
                android:minWidth="@dimen/result_button_min_width"
                android:maxWidth="@dimen/result_button_max_width"
                android:maxHeight="@dimen/result_button_max_height"
                android:minHeight="@dimen/result_button_min_height"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/nextlevel_btn" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnRetry"
                android:layout_width="@dimen/result_button_max_width"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/btn_retry"
                android:layout_gravity="center"
                android:minWidth="@dimen/result_button_min_width"
                android:maxWidth="@dimen/result_button_max_width"
                android:maxHeight="@dimen/result_button_max_height"
                android:minHeight="@dimen/result_button_min_height"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/restartlevel_btn" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnBackToMap"
                android:layout_width="@dimen/result_button_max_width"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/btn_back_to_map"
                android:layout_gravity="center"
                android:minWidth="@dimen/result_button_min_width"
                android:maxWidth="@dimen/result_button_max_width"
                android:maxHeight="@dimen/result_button_max_height"
                android:minHeight="@dimen/result_button_min_height"
                android:padding="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/exittomap_btn" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
