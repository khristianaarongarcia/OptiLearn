<?xml version="1.0" encoding="utf-8"?>
<!-- Quest Map Transition/Loading Screen -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Logo Container -->
    <ImageView
        android:id="@+id/ivTransitionLogo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/optilearn_logo"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Optional: Loading text -->
    <TextView
        android:id="@+id/tvLoadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Loading Quest Map..."
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:fontFamily="@font/pixelated_pusab"
        android:alpha="0"
        app:layout_constraintTop_toBottomOf="@id/ivTransitionLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
