<?xml version="1.0" encoding="utf-8"?>
<!-- Continuous vertical light ray path for quest map background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Central vertical line with gradient glow effect -->
    <item 
        android:left="0dp"
        android:right="0dp">
        <shape android:shape="rectangle">
            <size android:width="6dp"/>
            <!-- Gradient gives it a glowing light ray appearance -->
            <gradient
                android:angle="0"
                android:startColor="#00FFFFFF"
                android:centerColor="#CCFFFFFF"
                android:endColor="#00FFFFFF"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
