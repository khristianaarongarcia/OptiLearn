<?xml version="1.0" encoding="utf-8"?>
<!-- Pixelated Modal Outline with Cyan/Teal Theme -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Outer Shadow/Glow (Dark Teal) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_dark" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    
    <!-- Thick Pixelated Border (Cyan) -->
    <item 
        android:top="5dp" 
        android:bottom="5dp" 
        android:left="5dp" 
        android:right="5dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    
    <!-- Inner Border Highlight (Light Cyan) -->
    <item 
        android:top="10dp" 
        android:bottom="10dp" 
        android:left="10dp" 
        android:right="10dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary_light" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <!-- Main White Background -->
    <item 
        android:top="14dp" 
        android:bottom="14dp" 
        android:left="14dp" 
        android:right="14dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="1dp" />
        </shape>
    </item>
    
</layer-list>
