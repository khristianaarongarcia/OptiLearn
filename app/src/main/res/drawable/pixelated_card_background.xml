<?xml version="1.0" encoding="utf-8"?>
<!-- Retro/Pixel Art Style Card Background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow layer (pixelated drop shadow) -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#33000000" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <!-- Outer border -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#424242" />
            <corners android:radius="3dp" />
        </shape>
    </item>
    
    <!-- Inner border highlight -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="6dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    
    <!-- Main content area -->
    <item
        android:left="4dp"
        android:top="4dp"
        android:right="8dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="1dp" />
        </shape>
    </item>
    
</layer-list>
